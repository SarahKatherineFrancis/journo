<div class="parent">
  <h1 id="page-header">Your Favourites</h1>
  <div class="favourites">
  <% @favourites.each do |f| %>
    <div class="favourite-card">
      <%= f.name %>
      <%= f.trip.trip_name %>
      <% @trip = f.trip %>
      <%= simple_form_for [f], url: add_activity_to_trip_path(@trip, f), method: :post do |f| %>
        <%= f.submit 'Add to Trip' %>
      <% end %>
    </div>
  <% end %>
  </div>
</div>

 <%= link_to "Back", user_path(current_user) %>
