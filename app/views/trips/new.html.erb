<div class="form-background">
  <div class="parent">
    <div class="trip-form">
      <div class="trip-form-header">
        <h2>Where to?</h2>
        <h4>We're here to help you plan!</h4>
        <%= link_to "Edit your preferences",  edit_user_registration_path%>
      </div>
      <div class="trip-form-body", data-controller="activities">
        <%= simple_form_for @trip, html: { id: 'trip-form '} do |f| %>
          <div class="form-inputs">
            <%= f.input :trip_name,
                required: true,
                autofocus: true %>
            <%= f.input :destination,
                required: true,
                autofocus: true
            %>
            <%= f.input :longitude, :as => :hidden, :input_html => { :value => "lonTarget" } %>
            <%= f.input :latitude, :as => :hidden, :input_html => { :value => "latTarget" } %>
            <p>When? <i class="fa-regular fa-calendar"></i></p>
            <input type="text" id="daterange" name="date_range" class="calendar-input">
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Let's Go!", class: 'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="filler">
  </div>
</div>
<script>
  $(function() {
    $('#daterange').daterangepicker({
      opens: 'left', locale: {format: "DD/MM/YYYY"}
    }, function(start, end, label) {
      console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
    });
  });
</script>
