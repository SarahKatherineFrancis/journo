<h1>Trip Board</h1>
<h4>create a new trip board for your next adventure</h4>
<%= simple_form_for @trip do |f| %>
  <div class="form-inputs">
    <%= f.input :trip_name,
                required: true,
                autofocus: true %>
    <%= f.input :destination,
                required: true,
                autofocus: true %>
    <%= f.input :start_date,
                required: true %>
    <%= f.input :end_date,
                required: true %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Create Trip", class: 'button' %>
  </div>
<% end %>
