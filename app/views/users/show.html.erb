<div class ='container'>
  <div class="user-card-category" style ='width: 50%'>
    <h1>Welcome back,<%=@user.first_name%> <%=@user.last_name%>.</h1>
  </div>
</div>
<div class="user-card-category" style= 'width: 50%'>
  <div class='nationality'>
    <p>Nationality: <%=@user.nationality%></p>
  </div>
  <div class='location'>
    <p>Location: <%=@user.location%></p>
  </div>
  <div class='do-preference'>
    <p>Preferencs for DO: <%=@user.do_preference_list%></p>
  </div>
  <div class='eat-preference'>
    <p>Preferences for EAT: <%=@user.eat_preference_list%></p>
  </div>
</div>
</div>
<div class="container" >
  <div class ="userdashboard-row">
    <div class= "banner-card" style="height: 450px; background-image: url(https://images.unsplash.com/photo-1507608869274-d3177c8bb4c7?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80)">
      <h3>plan your next dream destination trip</h3>
      <h1><%= link_to icon("fa-solid", "chevron-right"),  new_trip_path, class: 'btn' %></h1>
    </div>
    <div class= "banner-card" style="background-image: url(https://images.unsplash.com/photo-1497262693247-aa258f96c4f5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=752&q=80)">
      <h3>trip boards</h3>
      <h1><%= link_to icon("fa-solid", "chevron-right"),  trip_path(current_user), class: 'btn' %></h1>
    </div>
    <div class= "banner-card" style="background-image: url(https://images.unsplash.com/photo-1498307833015-e7b400441eb8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1856&q=80)">
      <h3>suggested activites</h3>
      <h1><%= link_to icon("fa-solid", "chevron-right"),  trips_path, class: 'btn' %></h1>
    </div>
  </div>
</div>
<br>
<div class="container-trips">
  <div class ="row">
    <div class="user-map" style="width: 50%; height: 450px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <% if @trips.any?%>
      <div class ="user-trip" style="width: 50%; height: 450px;">
        <div class="trip-details">
          <h1><%=@trips.last.trip_name%></h1>
          <h6><i class="fa-solid fa-location-dot"></i> <%=@trips.last.destination%></h6>
          <h6><i class="fa-regular fa-calendar"></i> <%=@trips.last.start_date%></h6>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
<div class="image-container">
  <div>
    <h1></h1>
  </div>
</div>
<div class="container bootstrap snippets bootdeys">
  <div class="row">
    <% @trips[0..2].each do |trip| %>
      <div class="col-md-4 col-sm-6 content-card">
        <%=link_to (trip) do%>
          <div class="card-big-shadow">
            <div class="card card-just-text" data-background="color" data-color="blue" data-radius="none">
              <div class="content">
                <h6 class="category">Departing: <%= trip.start_date.strftime('%d-%m-%Y') %></h6>
                <h1 class="title"><%= trip.trip_name %></h1>
                <p class="description">Destination:<%= trip.destination%></p>
              </div>
            </div>
          </div>
        <%end%>
      </div>
    <% end %>
  </div>
</div>
<br>
<div class="trip-banner" style="background-image: url(https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1721&q=80)">
  <div class="container">
    <h1>your next adventure awaits.</h1>
    <p>plan your trip using your from your wishlist</p>
    <br>
    <%= link_to "go to wishlist",  favourites_path, class: 'btn' %>
  </div>
</div>
<br>
<h2>Popular Destinations</h2>

<%= render 'users/user', user: current_user %>
