<div class="container">
  <div class="dashboard-header">
    <div class="user-card-category">
      <h1>Welcome back,<%=@user.first_name%> <%=@user.last_name%>.</h1>
    </div>
    <div class="user-preferences">
      <div class="preferences-row">
        <div class='preference-card'>
          <h1><i class="fa-solid fa-passport"></i></h1>
          <p><%=@user.nationality%></p>
        </div>
        <div class='preference-card'>
          <h1><i class="fa-solid fa-location-dot"></i></h1>
          <p><%=@user.location%></p>
        </div>
        <div class='preference-card'>
          <h1><i class="fa-solid fa-person-hiking"></i></h1>
          <p><%=@user.do_preference_list%></p>
        </div>
        <div class='preference-card'>
          <h1><i class="fa-solid fa-utensils"></i></h1>
          <p><%=@user.eat_preference_list%></p>
        </div>
      </div>
    </div>
    <div class="text-center">
      <%= link_to "Plan Trip",  new_trip_path, class: 'checkout', style: 'width: 35%' %>
    </div>
  </div>
  <div class ="userdashboard-row">
    <div class= "banner-card" style="background-image: url(https://images.unsplash.com/photo-1530789253388-582c481c54b0?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80)">
      <h1>plan your next trip<%= link_to icon("fa-solid", "chevron-right"),  new_trip_path, class: 'btn' %></h1>
    </div>
    <div class= "banner-card" style="background-image: url(https://images.unsplash.com/photo-1506929562872-bb421503ef21?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=936&q=80)">
      <h1>current trip<%= link_to icon("fa-solid", "chevron-right"),  trip_path(current_user), class: 'btn' %></h1>
    </div>
    <div class= "banner-card" style="background-image: url(https://images.unsplash.com/photo-1497262693247-aa258f96c4f5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=752&q=80)">
      <h1>trip boards<%= link_to icon("fa-solid", "chevron-right"),  trips_path, class: 'btn' %></h1>
    </div>
  </div>
  <div class="image-container">

  </div>
  <div class="container-trips">
    <div class="user-trips-row" >
      <div class="content-card">
        <p><i class="fa-solid fa-thumbtack"></i></p>
        <h1>Recently Created Trip:</h1>
        <div>
          <div class="card card-just-text" data-background="color" data-color="blue" data-radius="none">
            <div class="content">
              <% if current_user.trips.empty? %>
                <h1>You currently have no trips!</h1>
              <% else %>
                <h1 class="title"><%= current_user.trips.last.trip_name %></h1>
                <h6 class="description"><i class="fa-solid fa-location-dot"></i> <%=current_user.trips.last.destination%></h6>
                <h6 class="category"><i class="fa-regular fa-calendar"></i> <%=current_user.trips.last.start_date%></h6>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="map-card"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <div class="popular-destinations">
        <h1>Popular Destinations:</h1>
        <%= render 'users/user', user: current_user %>
      </div>
    </div>
  </div>
  <div class="image-container">
    <div>
      <h1></h1>
    </div>
  </div>
